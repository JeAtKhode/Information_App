<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout container with a tiled background -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_tiles">

    <!-- ScrollView allows content to scroll vertically if it exceeds screen height -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- LinearLayout arranges content vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Team image displayed at the top -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_team_img2"
                android:contentDescription="Team Image" />

            <!-- Section 1 Title: "Nice to meet you" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/section_1_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Section 1 Body Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/section_1_body"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <!-- Section 2 Title: "Our Mission" aligned to the right -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/section_2_title"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <!-- Section 2 Body Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="@string/section_2_body"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
